<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TextOnImage.SamplePage" xmlns:controls="clr-namespace:TextOnImage;assembly=TextOnImage">
	<ContentPage.Content>
		<StackLayout>
			<AbsoluteLayout WidthRequest="150" HeightRequest="150" VerticalOptions="Start" HorizontalOptions="Center">
				<Image Source="BlankProfile.png" AbsoluteLayout.LayoutBounds="0.5,0.5,1,1" AbsoluteLayout.LayoutFlags="All" />
				<Label Text="Test" AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1" AbsoluteLayout.LayoutFlags="PositionProportional" TextColor="Red" />
			</AbsoluteLayout>
			<AbsoluteLayout WidthRequest="150" HeightRequest="150" VerticalOptions="EndAndExpand" HorizontalOptions="Center">
				<Image Source="BlankProfile.png" AbsoluteLayout.LayoutBounds="0.5,0.5,1,1" AbsoluteLayout.LayoutFlags="All" />
				<Label Text="Test" AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1" AbsoluteLayout.LayoutFlags="PositionProportional" TextColor="Green" />
			</AbsoluteLayout>
			<controls:TextOnImage Text="Hello" Color="Lime" Source="BlankProfile.png" WidthRequest="150" HeightRequest="150" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>